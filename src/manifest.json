{
  "manifest_version": 2,
  "version": "0.1.4",
  "author": "Repy",
  "description": "Domain Block",
  "name": "Domain Block",
  "icons": {
    "16": "icon-16.png",
    "19": "icon-24.png",
    "20": "icon-24.png",
    "38": "icon-48.png",
    "48": "icon-48.png",
    "120": "icon-120.png",
    "128": "icon-chrome128.png"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "domainblock@repy.info"
    }
  },
  "background": {
    "scripts": [
      "DomainBlock.js",
      "background.js"
    ],
    "persistent": true
  }
}